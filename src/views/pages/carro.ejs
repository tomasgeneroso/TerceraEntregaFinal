<%- include('../partials/nav.ejs') %> 

<div class="col-10 m-auto justify-content-center ">
    <div class="row ">
      <div class="col-3">
        <h1>CartID</h1>
      </div> 
      <div class="col-3 ">
        <form action="/cart" class=""method="post">          
              <input type="text" name='title'class="form-control" placeholder="Product title..." id="InputTitle">
              <button type="submit" class="btn btn-success">Add product to cart</button>
        </form>
      </div> 
    </div>
    
      
    <!--HACER UN RELLENADO AUTOMATICO-->
    <div class="">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
                
              </tr>
            </thead>
            <tbody>
              <tr>
                <% for (let i = 0; i < cart.length; i++) {%>
                <th><%=cart[i].title %></th>
                <th><%=cart[i].price %></th>
                <th><%=cart[i].description %></th>
                <%console.log(cart[i].description )%>
                
                <% } %> 
              </tr>
            </tbody>
          </table>
    </div>
    <form action='/cartdeleted' method="POST">
      <button type="submit" class="btn btn-danger">Delete cart</button>
    </form>
</div>

