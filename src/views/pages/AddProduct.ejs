<%- include('../partials/head.ejs') %> 

  <%- include('../partials/nav.ejs') %> 
  <div class="col-md-6 m-auto justify-content-center">
    <h1 class="col-md-3 m-auto justify-content-center" >ADD PRODUCT</h1>
    <div class="m-4 p-4 justify-content-center">
        <form class=" p-2" action="/product" method="post">
            <div class="form-group py-3">
                <label for="exampleInputEmail1">Title</label>
                <input type="text" name="title" class="form-control"  placeholder="Enter title">
            </div>
            <div class="form-group py-3">
                <label >Price</label>
                <input type="number" name="price" class="form-control" placeholder="Enter price">
            </div>
            <div class="form-group py-3">
                <label >Description</label>
                <input type="text" name="description" class="form-control"  placeholder="Enter a description">
            </div>
            <div class="form-group py-3">
                <label>Stock</label>
                <input type="number" class="form-control" name="stock" placeholder="10">
            </div>
            <button type="submit" class="btn btn-primary mx-2 col-md-3">Agregar</button> 
        </form>
        <button type="submit" onclick="location.href='/product'" class="btn btn-primary mx-2 col-md-3">Ir a lista de productos</button> 
        <% if(confirmation){ %>
            <div class="alert alert-info" role="alert">
                product added!
            </div>
        <% } %>  
    </div>   
  </div> 
  <%- include('../partials/footer.ejs') %>