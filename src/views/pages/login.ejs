  <div class="col-md-6 m-auto justify-content-center">
    <h1 class="col-md-3 m-auto justify-content-center">LOGIN</h1>
    <div class="m-4 p-4 justify-content-center">
        <form class=" py-2 justify-content-center" action="/" method="post">
            <div class="form-group py-3 ">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group py-3">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password">
            </div>

            <button type="submit" class="btn btn-primary mx-2 col-md-3">Log in</button>
        </form>
        <button type="submit" onclick="location.href='/register'" class="mx-2 btn btn-secondary mx-2">Register</button>
    </div>   
</div> 
